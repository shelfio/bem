{
  "extends": "@shelf/tsconfig/frontend",
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "strict": true,
    "noEmit": false,
  },
  "include": ["src/index.ts"],
  "exclude": [
    "**/stories/**",
    "scripts",
    ".idea",
    "__test__",
    ".storybook",
    ".husky",
    "**/*.test.*",
    "**/*.stories.*",
    "./lib",
    "packages/**/lib",
    "**/node_modules/**"
  ]
}
