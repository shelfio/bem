{
  "name": "@shelf/bem",
  "version": "3.0.1",
  "description": "Wrapper around BEM for CSS",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "https://shelf.io"
  },
  "main": "lib",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && yarn build:code",
    "build:code": "babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts' && find ./lib -name '*.test.d.ts' -delete",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "yarn test --coverage",
    "lint": "yarn lint:ci --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "TZ=UTC jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,json}": [
      "eslint --fix"
    ],
    ".circleci/config.yml": [
      ".husky/validate-circleci-config.sh"
    ]
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 93,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "dependencies": {
    "bem-cn": "3.0.1"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.19.6",
    "@shelf/babel-config": "1.2.0",
    "@shelf/eslint-config": "2.22.3",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.9",
    "@types/jest": "29.2.0",
    "@types/node": "16",
    "babel-preset-minify": "0.5.2",
    "eslint": "8.27.0",
    "husky": "8.0.2",
    "jest": "29.2.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "typescript": "4.9.3"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}
