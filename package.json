{
  "name": "@shelf/bem",
  "version": "4.0.3",
  "description": "Wrapper around BEM for CSS",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "https://shelf.io"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "types": "./lib/index.d.ts",
    "import": "./lib/index.esm.js",
    "require": "./lib/index.js"
  },
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && yarn build:code",
    "build:code": "node esbuild.js",
    "build:types": "tsc --emitDeclarationOnly",
    "coverage": "yarn test --coverage",
    "lint": "yarn lint:ci --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "size": "size-limit",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{html,md,yml}": "prettier --write",
    "*.{js,ts,json}": "eslint --fix",
    ".circleci/config.yml": ".husky/validate-circleci-config.sh"
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 93,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest"
  },
  "dependencies": {
    "bem-cn": "3.0.1"
  },
  "devDependencies": {
    "@shelf/esbuild-config": "0.2.0",
    "@shelf/eslint-config": "2.29.3",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.11",
    "@size-limit/preset-small-lib": "8.2.6",
    "@types/jest": "29.5.3",
    "eslint": "8.46.0",
    "husky": "8.0.3",
    "jest": "29.6.2",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "size-limit": "8.2.4",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "2.1 KB"
    }
  ]
}
