{
  "name": "@shelf/bem",
  "version": "5.0.0",
  "description": "Wrapper around BEM for CSS",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "https://shelf.io"
  },
  "sideEffects": false,
  "type": "module",
  "exports": "./lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib/ && tsc",
    "coverage": "yarn test --coverage",
    "lint": "yarn lint:ci --fix",
    "lint:ci": "eslint .",
    "prepack": "yarn build",
    "size": "size-limit",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{html,md,yml}": "prettier --write",
    "*.{js,ts,json}": "eslint --fix",
    ".circleci/config.yml": ".husky/validate-circleci-config.sh"
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest",
    "resolver": "ts-jest-resolver"
  },
  "devDependencies": {
    "@shelf/eslint-config": "4.2.1",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.1.0",
    "@size-limit/preset-small-lib": "11.1.6",
    "@types/jest": "29.5.14",
    "eslint": "9.15.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "size-limit": "11.1.6",
    "ts-jest": "29.2.5",
    "ts-jest-resolver": "2.0.1",
    "typescript": "5.7.2"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "385 B"
    }
  ]
}
